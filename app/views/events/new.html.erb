<h1>Create new event</h1>

<%= form_for(@event) do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date, class: 'form-control' %>

  <%= f.label :location %>
  <%= f.text_field :location, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>

  <%= f.submit "Create the event", class: "btn btn-primary" %>
<% end %>
